# API Gateway proxy for local frontend testing
FROM python:3.10-slim

WORKDIR /app

# Install dependencies
COPY docker/requirements-proxy.txt .
RUN pip install --no-cache-dir -r requirements-proxy.txt

# Copy proxy server
COPY docker/api-gateway-proxy.py .

# Expose port
EXPOSE 8000

# Run server
CMD ["python", "api-gateway-proxy.py"]
